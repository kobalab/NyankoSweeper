@charset "UTF-8"

html
    margin: 0 15px
    font-size: 12px
    font-family: "Hiragino Maru Gothic Pro", Verdana, sans-serif
    -webkit-text-size-adjust: 100%
body
    margin: auto
    margin-bottom: 40px
    max-width: 900px

input
    font-size: 100%

h1
    img
        width: 32px
        vertical-align: text-bottom
    font-size: 28px
    border-bottom: solid 2px #ccc
    margin-bottom: 0

.version
    font-size: 16px
    font-family: Georgia, serif
    text-align: right
    margin-top: -1.2em

#menu
    font-size: 14px
    margin: 0.5em 0
    padding: 0
    white-space: nowrap
    overflow: auto
    li
        display: inline-block
        margin-left: 1em
        a
            color: inherit
            text-decoration: none

#loading
    padding: 1em 2em

#board
    display: none
    background-color: silver
    border: outset 5px
    tr td
        border: inset 1px
        padding: 4px
        position: relative
    .block
        margin-bottom: 6px
        div
            line-height: 0
            white-space: nowrap
            div
                display: inline-block
                box-sizing: border-box
                width: 16px
                height: 16px
                border: solid 1px
                border-color: #ddd #666 #666 #ddd
                background-position: -1px -1px
                &.mark1
                    background-image: url('mark1.gif')
                &.mark2
                    background-image: url('mark2.gif')
                &.open
                    background-color: gray
                    border: solid 1px
                    border-color: #666 #ddd #ddd #666
                    &.OK
                        background-image: url('OK.gif')
                    &.NG
                        background-image: url('NG.gif')
                    &.n1
                        background-image: url('1.gif')
                    &.n2
                        background-image: url('2.gif')
                    &.n3
                        background-image: url('3.gif')
                    &.n4
                        background-image: url('4.gif')
                    &.n5
                        background-image: url('5.gif')
                    &.n6
                        background-image: url('6.gif')
                    &.n7
                        background-image: url('7.gif')
                    &.n8
                        background-image: url('8.gif')
    .status
        font-size: 12px
        background: white
        padding: 1px 1em
        border: inset 2px
    .dialog
        display: none
        position: absolute
        top: 0
        left: 0
        width: 100%
        height: 100%
        background: rgba(0, 0, 0, 0.3);
        form
            margin: 20% auto
            font-size: 12px
            padding: 8px
            display: table
            background: silver
            border: ridge 1px
            input
                width: 10em
                &::placeholder
                    color: #999
                    opacity: 1

#pref
#rule
    display: none
    margin-top: 1em
    max-width: 600px
    border: solid 2px silver
    padding: 1em
    h2
        margin: 0
        font-size: 120%
        border-bottom: solid 1px silver
    h3
        margin: 1em 0 0 0
        font-size: 100%
        border-bottom: dotted 1px silver
    p, dd
        img
            height: 1.4em
            vertical-align: top
#pref
    ul
        padding-left: 2em
        li
            list-style: none
            padding-left: 0
            input[name="x"]
            input[name="y"]
                width: 1.5em
            input[name="n"]
                width: 2em
    .error
        display: none
        color: red
    .button
        text-align: right
#score
    display: none
    margin-top: 1em
    table
        min-width: 420px
        font-size: 14px
        border-collapse: collapse
        tr.new
            color: red
        th, td
            padding: 0.5em 1em
        th
            border-bottom: solid 2px silver
        td
            border-bottom: dotted 1px silver
            &.rank
                text-align: right
            &.name
                width: 10em
                max-width: 10em
                white-space: nowrap
                overflow: hidden
                text-overflow: ellipsis

@media screen and (max-width: 450px)
    #score
        table
            font-size: 12px
            width: 100%
            min-width: auto
            th, td
                padding: 0.5em 0.5em
